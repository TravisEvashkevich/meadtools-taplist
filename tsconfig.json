{
  "compilerOptions": {
    "target": "ES6",
    "module": "None", // <- Not a module
    "outDir": "public/js",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": false, // <- Important for non-modules
    "moduleResolution": "node",
    "noEmitOnError": false // <- Optional: still emit even with type errors
  },
  "include": ["src/**/*"]
}
